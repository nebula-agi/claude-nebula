{
  "description": "Nebula: Persistent semantic memory for Claude Code",
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/scripts/capture-hook.cjs UserPromptSubmit",
            "timeout": 25
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/scripts/capture-hook.cjs Stop",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
